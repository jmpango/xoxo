<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Quick Search -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="QuickSearchEditText">
        <item name="android:cursorVisible">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/editext_leftround_border</item>
        <item name="android:hint">@string/quck_search_text_hint</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/quick_search_text_size</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Quick Search Button -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="QuickSearchButton">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/editext_rightround_border</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">-5dp</item>
        <item name="android:src">@android:drawable/ic_menu_search</item>
    </style>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- List Search -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <style name="ListSearchEditText">
        <item name="android:cursorVisible">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/editext_leftround_border</item>
        <item name="android:hint">@string/list_search_text_hint</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/quick_search_text_size</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>